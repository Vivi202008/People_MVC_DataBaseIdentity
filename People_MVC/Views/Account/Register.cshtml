@using People_MVC.Models.ViewModel;
@model CreateUserViewModel;
@section scripts {
    <script type="text/javascript" src="~/jquery/jquery.js"></script>
    <script type="text/javascript" src="~/js/UserScript.js"></script>
}
@section styles {
    <link href="~/css/formStyle.css" rel="stylesheet" type="text/css" />
}
@{ }
<div>
    <form asp-action="Register" method="post" class="registration-form form">
        <h2 class="form-text">Register</h2>
        <div class="form-group">
            <label for="Email">Email:</label>
            <input class="form-control" type="email" asp-for="Email" />
        </div>
        <div class="form-group">
            <label for="FirstName">Firstname:</label>
            <input class="form-control" maxlength="50" type="text" asp-for="FirstName" />
        </div>
        <div class="form-group">
            <label for="LastName">Lastname:</label>
            <input class="form-control" maxlength="100" type="text" asp-for="LastName" />
        </div>
        <div class="form-group">
            <label for="Password">Birthday:</label>
            <input class="form-control" type="date" asp-for="Birthday" />
        </div>
        <div class="form-group">
            <label for="Password">Password:</label>
            <input class="form-control" type="password" asp-for="Password" id="password" />
            <input class="form-control" type="password" id="password-repeat" />
            <p id="password-msg"></p>
        </div>

        @if (@ViewBag.RegistrationErrorMsg != null)
        {
<h3 class="form-text text-warning" id="register-error-msg">@ViewBag.RegistrationErrorMsg</h3>}


        <div class="form-group">
            <button class="btn btn-primary" type="submit" value="Register" id="reg-btn">Register</button>
        </div>
    </form>
</div>